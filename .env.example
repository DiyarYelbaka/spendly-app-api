# Database
DATABASE_URL="postgresql://username:password@localhost:5432/spendly?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS
CORS_ORIGIN="http://localhost:3000"
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL="gpt-4o-mini"
OPENAI_TIMEOUT=5000
AI_PARSING_ENABLED=true

# Email Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_USER=your-email@gmail.com
MAIL_KEY=your-gmail-app-password-here
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Spendly

# Password Reset Configuration
PASSWORD_RESET_CODE_EXPIRES_IN=15m  # 15 dakika
PASSWORD_RESET_MAX_ATTEMPTS=5        # Maksimum deneme sayısı
PASSWORD_RESET_RATE_LIMIT_MINUTES=5  # Rate limiting (5 dakikada 1 istek)
